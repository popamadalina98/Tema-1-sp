%Pentru rezolutia temporara de 2 ms
t=0:0.002:4;
f=0.25;
omega=2*pi*f;
s=1.5*abs(sin(omega*t));
subplot(3,1,1)
plot(t,s),grid,xlabel('t [s]'),ylabel('A [V]');


%Pentru rezolutia temporara de 20 ms
t=0:0.02:4;
